{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Buho on iOS",
      "type": "nativescript",
      "request": "launch",
      "platform": "ios",
      "appRoot": "${workspaceRoot}/apps/nativescript-buho",
      "sourceMaps": true,
      "watch": true
    },
    {
      "name": "Test Buho on iOS",
      "type": "nativescript",
      "request": "launch",
      "platform": "ios",
      "appRoot": "${workspaceRoot}/apps/nativescript-buho",
      "sourceMaps": true,
      "watch": false,
      "stopOnEntry": true,
      "launchTests": true,
      "tnsArgs": ["--justlaunch"]
    },
    {
      "name": "Attach Buho on iOS",
      "type": "nativescript",
      "request": "attach",
      "platform": "ios",
      "appRoot": "${workspaceRoot}/apps/nativescript-buho",
      "sourceMaps": true,
      "watch": false
    },
    {
      "name": "Launch Buho on Android",
      "type": "nativescript",
      "request": "launch",
      "platform": "android",
      "appRoot": "${workspaceRoot}/apps/nativescript-buho",
      "sourceMaps": true,
      "watch": true
    },
    {
      "name": "Test Buho on Android",
      "type": "nativescript",
      "request": "launch",
      "platform": "android",
      "appRoot": "${workspaceRoot}/apps/nativescript-buho",
      "sourceMaps": true,
      "watch": false,
      "stopOnEntry": true,
      "launchTests": true,
      "tnsArgs": ["--justlaunch"]
    },
    {
      "name": "Attach Buho on Android",
      "type": "nativescript",
      "request": "attach",
      "platform": "android",
      "appRoot": "${workspaceRoot}/apps/nativescript-buho",
      "sourceMaps": true,
      "watch": false
    }
  ]
}
